<!-- views/translations-show.handlebars -->
<a href="/">Back to Home</a>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>{{translation.word}} - {{translation.trans}}</h2>
        <p>{{translation.synonym}}</p>
        <p><a href="/translations/{{translation._id}}/edit">Edit</a></p>
        {{!-- Delete Button --}}
        <p>
            <form method="POST" action="/translations/{{translation._id}}?_method=DELETE">
                <button class="btn btn-primary" type="submit">Delete</button>
            </form>
        </p>
    </div>
</div>





